<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.0" 
	xmlns="http://java.sun.com/xml/ns/javaee" 
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
	xsi:schemaLocation="http://java.sun.com/xml/ns/javaee 
	http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd">
  <display-name></display-name>
 
  <context-param>
    <param-name>jndi</param-name>
    <param-value>java:comp/env/jdbc/book</param-value>
  </context-param>
  <servlet>
    <servlet-name>LoginCheckServlet</servlet-name>
    <servlet-class>com.yangkai.Servlet.LoginCheckServlet</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>MySQLConnectionPOOLTest</servlet-name>
    <servlet-class>com.yangkai.Servlet.MySQLConnectionPOOLTest</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>DataSourceServlet</servlet-name>
    <servlet-class>com.yangkai.Servlet.DataSourceServlet</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>PoolConnectionTest</servlet-name>
    <servlet-class>com.yangkai.Servlet.PoolConnectionTest</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>ListenerCheckServlet</servlet-name>
    <servlet-class>com.yangkai.Servlet.ListenerCheckServlet</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>UpdateShopGoodsServlet</servlet-name>
    <servlet-class>com.yangkai.Servlet.shop.UpdateShopGoodsServlet</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>DeleteShopGoodsServlet</servlet-name>
    <servlet-class>com.yangkai.Servlet.shop.DeleteShopGoodsServlet</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>TestServlet</servlet-name>
    <servlet-class>com.yangkai.Servlet.TestServlet</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>JSTLDemoServlet</servlet-name>
    <servlet-class>com.yangkai.Servlet.jstl.JSTLDemoServlet</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>PageContextServlet</servlet-name>
    <servlet-class>com.yangkai.Servlet.PageContextServlet</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>RequestDispatcherServlet</servlet-name>
    <servlet-class>org.yangkai.test.servlet.RequestDispatcherServlet</servlet-class>
  </servlet>

  <servlet-mapping>
    <servlet-name>MySQLConnectionPOOLTest</servlet-name>
    <url-pattern>/pool/MySQLConnectionPOOLTest</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>LoginCheckServlet</servlet-name>
    <url-pattern>/test/filter/LoginCheckServlet</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>DataSourceServlet</servlet-name>
    <url-pattern>/pool/DataSourceServlet</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>PoolConnectionTest</servlet-name>
    <url-pattern>/pool/PoolConnectionTest</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>ListenerCheckServlet</servlet-name>
    <url-pattern>/test/listener/ListenerCheckServlet</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>UpdateShopGoodsServlet</servlet-name>
    <url-pattern>/test/shop/UpdateShopGoodsServlet</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>DeleteShopGoodsServlet</servlet-name>
    <url-pattern>/test/shop/DeleteShopGoodsServlet</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>TestServlet</servlet-name>
    <url-pattern>/test/TestServlet</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>JSTLDemoServlet</servlet-name>
    <url-pattern>/jstl/JSTLDemoServlet</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>PageContextServlet</servlet-name>
    <url-pattern>/pageContext/PageContextServlet</url-pattern>
  </servlet-mapping>
  <filter>
    <filter-name>LoginCheckFilter</filter-name>
    <filter-class>com.yangkai.Servlet.filter.LoginCheckFilter</filter-class>
  </filter>
  <filter>
    <filter-name>MessageFilter</filter-name>
    <filter-class>com.yangkai.Servlet.filter.MessageFilter</filter-class>
  </filter>
  <filter-mapping>
    <filter-name>LoginCheckFilter</filter-name>
    <url-pattern>/filter/LoginCheckServlet</url-pattern>
    <url-pattern>/filter/logincheck.jsp</url-pattern>
  </filter-mapping>
  <filter-mapping>
    <filter-name>MessageFilter</filter-name>
    <url-pattern>/filter/message.jsp</url-pattern>
  </filter-mapping>
  <servlet-mapping>
    <servlet-name>RequestDispatcherServlet</servlet-name>
    <url-pattern>/RequestDispatcherServlet</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>TestServlet</servlet-name>
    <url-pattern>/TestServlet</url-pattern>
  </servlet-mapping>
  <welcome-file-list>
    <welcome-file></welcome-file>
  </welcome-file-list>
  <listener>
    <listener-class>com.yangkai.Servlet.listener.MyServletContextListener</listener-class>
  </listener>
  <listener>
    <listener-class>com.yangkai.Servlet.listener.MyServletContextAttributeListener</listener-class>
  </listener>
  <listener>
    <listener-class>com.yangkai.Servlet.listener.MyListener</listener-class>
  </listener>
</web-app>
